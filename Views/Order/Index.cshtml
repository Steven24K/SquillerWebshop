@model System.Collections.Generic.IEnumerable<Webshop.Models.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Order overview";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                <th>Ordernumber</th>
                <th>Order status</th>
                <th>payed with</th>
                <th>payed</th>
                <th>Customer</th>
                <th>Total price</th>
                <th>Order date</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var o in @Model)
                {
                    <tr>
                        <td><a asp-controller="Order" asp-action="Detail" asp-route-orderId="@o.OrderId" asp-route-id="@o.CustomerId">@o.OrderId</a></td>
                        
                        <td>
                            <select>
                                <option>@o.Status</option>
                                <option>TO_BE_PAYED</option>
                                <option>TO_BE_PACKED</option>
                                <option>PAYED</option>
                                <option>PACKED</option>
                                <option>DELIVERED</option>
                            </select>
                        </td>

                        <td>@o.paymentMethod</td>

                        <td>
                            <select>
                                <option>@o.Payed</option>
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </td>

                        <td><a asp-controller="Customer" asp-action="Detail" asp-route-id="@o.CustomerId">@o.Customer</a></td>
                        <td>@o.TotalPrice</td>
                        <td>@o.OrderDate</td>
                        <td><a href="#">Safe changes</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
