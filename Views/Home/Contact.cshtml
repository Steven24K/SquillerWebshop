@model Webshop.Models.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<h2>@ViewData["Title"]</h2>

<div class="container">

    <form class="well form-horizontal" window.top.location:"mailto:quinten_huisman@hotmail.com"  method="post" enctype:"text/plain" id="contact_form">
<fieldset>

<!-- Form Name -->
<legend>Contact Us Today!</legend>

<div class="form-group"> 
  <label class="col-md-4 control-label">Title</label>
    <div class="col-md-4 selectContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <select asp-for="Title" class="form-control selectpicker" >
      <option value=" " >Please select your title</option>
      <option>Mr.</option>
      <option>Ms.</option>
      <option>Mrs.</option>
    </select>
  </div>
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
</div>
<!-- Text input-->

<div class="form-group">
  <label class="col-md-4 control-label">Name</label>  
  <div class="col-md-4 inputGroupContainer">
  <div class="input-group">
  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
  <input  asp-for="Name" placeholder="Name" class="form-control"  type="text">
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
</div>

<!-- Text input-->

<div class="form-group">
  <label class="col-md-4 control-label" >Surname</label> 
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
  <input asp-for="Surname" placeholder="Surname" class="form-control"  type="text">
    </div>
    <span asp-validation-for="Surname" class="text-danger"></span>
  </div>
</div>

<!-- Text input-->
       <div class="form-group">
  <label class="col-md-4 control-label">E-Mail</label>
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
  <input asp-for="Email" type="text" placeholder="E-Mail Address" class="form-control"  type="text " >
    </div>
        <span asp-validation-for="Email" class="text-danger"></span>
  </div>
</div>


<!-- Text input-->
       
<div class="form-group">
  <label class="col-md-4 control-label">Phonenumber</label>  
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
  <input asp-for="Phonenumber" placeholder="(06)12 34 56 78" class="form-control" type="text">
    </div>
        <span asp-validation-for="Phonenumber" class="text-danger"></span>
  </div>
</div>

<!-- Text input-->
       
<div class="form-group">
  <label class="col-md-4 control-label">Ordernumber</label>  
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
  <input asp-for="Ordernumber" placeholder="123456789" class="form-control" type="text">
    </div>
      <span asp-validation-for="Ordernumber" class="text-danger"></span>
  </div>
</div>

<!-- Select Basic -->
   
<div class="form-group"> 
  <label class="col-md-4 control-label">Subject</label>
    <div class="col-md-4 selectContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
    <select asp-for="Subject" class="form-control selectpicker" >
      <option value=" " >Please select your subject</option>
      <option>Order status</option>
      <option>Product availability</option>
      <option>Repairs</option>
      <option>Squiller account</option>
      <option>Business related</option>
      <option>Return and exchanges</option>
      <option>Other</option>
    </select>
  </div>
    <span asp-validation-for="Subject" class="text-danger"></span>
</div>
</div>

<!-- Text area -->
  
<div class="form-group">
  <label class="col-md-4 control-label">Description</label>
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
        	<textarea class="form-control" asp-for="Description" placeholder="Comment"></textarea>
  </div>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
</div>

<!-- Success message -->
<div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thank you for contacting us, we will get back to you shortly.</div>
<form>
<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label"></label>
  <div class="col-md-4">
    <button type="submit" class="btn btn-warning" >Send <span class="glyphicon glyphicon-send"></span></button>
  </div>
</div>
</form>
</fieldset>
</form>
</div>
    </div><!-- /.container -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}