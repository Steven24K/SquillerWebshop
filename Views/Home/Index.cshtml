@model IEnumerable<Webshop.Models.EntityInfo.ProductInfo>

@{
    ViewData["Title"] = "Home";
}


<div class="container">
      
      <div class="row">
          

           <div class="col-lg-12">
                  <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
              <ol class="carousel-indicators">
                 <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                 <li data-target="#myCarousel" data-slide-to="1"></li>
                 <li data-target="#myCarousel" data-slide-to="2"></li>
             </ol>

             <!-- Wrapper for slides -->
            <div class="carousel-inner">
               <div class="item active">
                 <img src="~/images/rolex1.jpg" alt="watch1">
            </div>

            <div class="item">
               <img src="~/images/rolex2.jpg" alt="watch2">
               
            </div>

             <div class="item">
                 <img src="~/images/rolex3.jpg" alt="watch3">
              </div>
           </div>

            <!-- Left and right controls -->
           <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
             <span class="glyphicon glyphicon-chevron-right"></span>
             <span class="sr-only">Next</span>
          </a>
         </div>
       
       <div class="row"></div>
        @foreach(var p in Model as IEnumerable<Webshop.Models.EntityInfo.ProductInfo>){
        
           <!--Products section-->
            <div class="col-lg-4">
               <div class="thumbnail">
                  <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.Id">
                   <img width="700px" height="400px" src='@string.Format("/images/products/{0}.jpg", @p.Id)'>
                     <div class="caption">
                       <p> @p.Name</p>
                    </div>
                 </a>
               </div>
            </div> 
            <!--One section per product-->
            }
         </div>
         <!--End row-->       
           </div>

      </div>
      <!--End row-->
</div>
<!--End container-->



           
        