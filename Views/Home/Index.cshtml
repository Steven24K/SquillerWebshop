@model IEnumerable<Webshop.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<!--This page doesn't require authorization and can be viewed by all users, note that the page takes model at the top.
This is model is send by the controller and contains the first three products from the database.
TODO: Load in the first 9 products from the database, in the shape of a page and put the result into a slide show.
 -->

<div class="container-fluid"> 
      <div class="row">
           <div class="container-fluid">
                  <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
              <ol class="carousel-indicators">
                 <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                 <li data-target="#myCarousel" data-slide-to="1"></li>
                 <li data-target="#myCarousel" data-slide-to="2"></li>
             </ol>

             <!-- Wrapper for slides -->
            <div class="carousel-inner">
               <div class="item active">
                 <img src="~/images/rolex1.jpg" alt="watch1">
            </div>

            <div class="item">
               <img src="~/images/rolex2.jpg" alt="watch2">
               
            </div>

             <div class="item">
                 <img src="~/images/rolex3.jpg" alt="watch3">
              </div>
           </div>

            <!-- Left and right controls -->
           <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
             <span class="glyphicon glyphicon-chevron-right"></span>
             <span class="sr-only">Next</span>
          </a>
         </div>

         </div>
       </div>

       <div class="row">
        @foreach(var p in Model as IEnumerable<Webshop.Models.Product>)
          {//Begin loop
            //To load in all the products from the model provided by the controller
           <!--Products section-->
            <div class="col-lg-4">
               <div class="media">
                  <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.Id">
                   <img class="img-responsive" width="400px" height="400px" src='@p.ImageUrl'>
                     <div class="item">
                       <p> @p.Name</p>
                    </div>
                 </a>
               </div>
            </div> 
            <!--One section per product-->
            
            //End Loop
            }
         </div>
         <!--End row-->       
 </div><!--End container-->





           
        