@model Webshop.Models.Product;

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<div class="row">
    <div class="col-md-6">
     <form asp-controller="Product" asp-action="EditPost" id="Addproduct">
         <input type="hidden" asp-for="Id">
        <div class="form-group">
             <label asp-for="Name" class="control-label"></label>
             <input asp-for="Name" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" type="text" cols="40" rows="5"></textarea>
        </div>
        <div class="form-group">
            <input type="file" ><!--Upload system doesn't work yet-->
        </div>
        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <input asp-for="Category" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Brand" class="control-label"></label>
            <input asp-for="Brand" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
             <input asp-for="Price" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            Man:<input type="radio" asp-for="Gender" value="MAN">
            Woman:<input type="radio" asp-for="Gender" value="WOMAN"> 
            Don't know:<input type="radio" asp-for="Gender" value="UNSPECIFIED">
        </div>
        <div class="form-group">
            <label asp-for="Extra" class="control-label"></label>
            <select asp-for="Extra" id="Addproduct">
              <option value="REGULAR">Regular</option>
              <option value="LIMITED">Limited</option>
              <option value="SALE">Sale</option>
              <option value="EXTRAVAGANT">Extravagant</option>
           </select>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" type="text">
        </div>
        <div class="form-group">
            <input type="submit" value="Safe">
        </div>
       </form>
    </div>
</div>


