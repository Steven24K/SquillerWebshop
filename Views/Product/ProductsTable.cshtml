@model IEnumerable<Webshop.Models.Product>

@{
    ViewData["Title"] = "All Products";
}

<h1>Products</h1>
<a class="btn btn-info" asp-controller="Product" asp-action="Create">Add Product</a><br/><br/>

<form method="get" asp-controller="Product" asp-action="ProductsTable">
    <input name="keyword" type="text" placeholder="Search products">
    <input type="submit" value="Search">
</form>

<table class="table">
    <thead>
        <tr>
            <th><a asp-controller="Product" asp-action="ProductsTable" asp-route-order="NAME">@Html.DisplayNameFor(model => model.Name)</a></th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Brand)</th>
            <th><a asp-controller="Product" asp-action="ProductsTable" asp-route-order="PRICE">@Html.DisplayNameFor(model => model.Price)</a></th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Extra)</th>
            <th><a asp-controller="Product" asp-action="ProductsTable" asp-route-order="AMOUNT">@Html.DisplayNameFor(model => model.Amount)</a></th>
        </tr>
    </thead>
    <tbody>
         @foreach(var item in Model)
         {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Extra)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>

                <td>
                   <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                   <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                   <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>