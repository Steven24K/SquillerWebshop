@model Webshop.Models.Product;

@{
    ViewData["Title"] = "Add Product";
}

<h1>Add product</h1>

<div class="row">
    <div class="col-md-6">
     <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data" id="Addproduct">
        <div class="form-group">
             <label asp-for="Name" class="control-label"></label>
             <input class="form-control" asp-for="Name" type="text">
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea class="form-control" asp-for="Description" type="text" cols="40" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input class="form-control-file" asp-for="ImageUrl" >
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <input class="form-control" asp-for="Category" type="text">
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Brand" class="control-label"></label>
            <input class="form-control" asp-for="Brand" type="text">
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
             <input class="form-control" asp-for="Price" type="text">
             <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <div>
            Man:<input class="form-check-input" type="radio" asp-for="Gender" value="MAN">
            </div>
            <div>
            Woman:<input class="form-check-input" type="radio" asp-for="Gender" value="WOMAN"> 
            </div>
            <div>
            Don't know:<input class="form-check-input" type="radio" asp-for="Gender" value="UNSPECIFIED">
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Extra" class="control-label"></label>
            <select class="form-control" asp-for="Extra" id="Addproduct">
              <option value="REGULAR">Regular</option>
              <option value="LIMITED">Limited</option>
              <option value="SALE">Sale</option>
              <option value="EXTRAVAGANT">Extravagant</option>
           </select>
           <span asp-validation-for="Extra" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input class="form-control" asp-for="Amount" type="text">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create">
        </div>
       </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}