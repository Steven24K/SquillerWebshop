@model Webshop.Models.Customer;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit user</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Customer" asp-action="EditPost">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" type="hidden">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input class="form-control" asp-for="Name" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
             <input class="form-control" asp-for="Surname" type="text">
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <div>
             Man:<input class="form-check-input" asp-for="Gender" value="MAN" type="radio">
             </div>
             <div>
             Woman:<input class="form-check-input" asp-for="Gender" value="WOMAN" type="radio">
             </div>
             <div>
             Don't want to say:<input class="form-check-input" asp-for="Gender" value="UNISEX" type="radio">
             </div>
        </div>
        <div class="form-group">
             <label asp-for="Email" class="control-label"></label>
             <input class="form-control" asp-for="Email" type="text">
        </div>
        <div class="form-group">
             <label asp-for="Street" class="control-label"></label>
             <input class="form-control" asp-for="Street" type="text">
        </div>
        <div class="form-group">
             <label asp-for="PostalCode" class="control-label"></label>
             <input class="form-control" asp-for="PostalCode" type="text">
        </div>
        <div class="form-group">
             <label asp-for="City" class="control-label"></label>
             <input class="form-control" asp-for="City" type="text">
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success">
        </div>
        </form>
    </div>
</div>