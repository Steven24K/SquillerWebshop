@model Webshop.Models.Customer;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit user</h1>


<div class="row">
    <div class="col-md-4">
        <form id="edit" asp-controller="Customer" asp-action="EditPost">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" type="hidden">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input class="form-control" asp-for="Name" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
             <input class="form-control" asp-for="Surname" type="text">
             <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" form="edit">
                <option value="MAN">MAN</option>
                <option value="WOMAN">WOMAN</option>
                <option value="UNISEX">Don't want to say</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="Email" class="control-label"></label>
             <input class="form-control" asp-for="Email" type="text">
             <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="Street" class="control-label"></label>
             <input class="form-control" asp-for="Street" type="text">
             <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="PostalCode" class="control-label"></label>
             <input class="form-control" asp-for="PostalCode" type="text">
             <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="City" class="control-label"></label>
             <input class="form-control" asp-for="City" type="text">
             <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success">
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}