@model Webshop.Models.Customer;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Register";
}

<h1>Are you sure you want to delete this Customer?</h1>

<p>
    <b>Firstname: </b> @Html.DisplayFor(model => model.Name)<br/>
    <b>Lastname: </b> @Html.DisplayFor(model => model.Surname)<br/>
    <b>Gender: </b> @Html.DisplayFor(model => model.Gender)<br/>
    <b>Email: </b> @Html.DisplayFor(model => model.Email)<br/>
</p>

    <form asp-controller="Customer" asp-action="DeleteReal">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @if(HttpContextAccessor.HttpContext.Request.Cookies["user"] != null)
        {
           <a asp-controller="Customer" asp-action="Detail">Cancel</a>
        }else{
             <a asp-controller="Customer" asp-action="Index">Cancel</a>
        }
    </form>