@model Webshop.Models.RegisterCustomer;

@{
    ViewData["Title"] = "Register";
}

<h1>Register new user</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Customer" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label"></label>
             <input asp-for="Surname" type="text">
             <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
             Man:<input asp-for="Gender" value="MAN" type="radio">
             Woman:<input asp-for="Gender" value="WOMAN" type="radio">
             Don't want to say:<input asp-for="Gender" value="UNISEX" type="radio">
             <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="Email" class="control-label"></label>
             <input asp-for="Email" type="text">
             <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="Password" class="control-label"></label>
             <input asp-for="Password" type="password">
             <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword" class="control-label">Confirm password</label>
            <input asp-for="ConfirmPassword" type="password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="Street" class="control-label"></label>
             <input asp-for="Street" type="text">
             <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="PostalCode" class="control-label"></label>
             <input asp-for="PostalCode" type="text">
             <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
             <label asp-for="City" class="control-label"></label>
             <input asp-for="City" type="text">
             <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
              <label asp-for="AcceptTerms" class="control-label"></label>
              <input checked asp-for="AcceptTerms" type="checkbox">
              <span asp-validation-for="AcceptTerms" class="text-danger"></span>
              <a target="_blank" asp-controller="Home" asp-action="Terms">Read the terms and conditions</a>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-default">
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}