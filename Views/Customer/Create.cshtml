@model Webshop.Models.RegisterCustomer;

@{
    ViewData["Title"] = "Register";
}

<h1>Register new user</h1>

<form asp-controller="Customer" asp-action="Create" id="customerform">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <!-- Name -->
        <div class="form-group col-md-5">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Surname -->
        <div class="form-group col-md-5">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <!-- Gender -->
        <div class="form-group col-md-2">
            <label asp-for="Gender" class="control-label">Gender</label>
            <select asp-for="Gender" id="customerform" class="form-control">
                <option value="MAN">Man</option>
                <option value="WOMAN">Woman</option>
                <option value="UNISEX">Don't want to say</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
  </div>

  <div class="form-row">

      <!-- Email -->
    <div class="form-group col-md-12">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="form-group col-md-12">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <!-- Confirm Password -->
    <div class="form-group col-md-12">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
  </div>
  <!-- Address -->
  <div class="form-group col-md-12">
    <label asp-for="Street">Address</label>
    <input asp-for="Street "type="text" class="form-control" placeholder="1234 Main St">
    <span asp-validation-for="Street" class="text-danger"></span>
  </div>
  <!-- City -->
  <div class="form-row">
    <div class="form-group col-md-10">
      <label asp-for="City">City</label>
      <input asp-for="City" type="text" class="form-control" placeholder="Schiedam">
      <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <!-- Postal Code -->
    <div class="form-group col-md-2">
      <label asp-for="PostalCode">Postal Code</label>
      <input asp-for="PostalCode" type="text" class="form-control">
      <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="form-row">
    <div class="form-group col-md-2">
            <label asp-for="AcceptTerms" class="control-label"></label>
            <input checked asp-for="AcceptTerms" type="checkbox">
            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
            <a target="_blank" asp-controller="Home" asp-action="Terms">Read the terms and conditions</a>
    </div>
    <div class="form-group col-md-10">
      <input type="submit" value="Register" class="btn">
    </div>
  </div>
  </div>
  
  </div>
</form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}